<img src="<%= @shoe.image_tag %>" >
<div class="price">
price: <%= @shoe.price %>
</div>
<div class="container">
  <%= @shoe.description %>
</div>
<%= link_to "Back", root_path, class: "btn btn-default" %>
<%= link_to "Add to cart!", root_path, class: "btn btn-primary" %> <!-- this route must get changed for shoppingcart-->

<% if (current_user.try(:admin?)) %>
<!-- delete button for Admin, not yet sure if it stays here -->
<div class="Administration">
<%= link_to "Delete", shoe_path( @shoe.id ), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" } %>
</div>
<% end %>
