<%= form_for @shoe do |f| %>

  <%= f.label :brand %>
  <%= f.text_field :brand %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_tag %>
  <%= f.text_field :image_tag %>

  <%= f.label :color %>
  <%= f.text_field :color %>

  <%= f.submit (@shoe.new_record? ? "Create" : "Update") %>
<% end %>
